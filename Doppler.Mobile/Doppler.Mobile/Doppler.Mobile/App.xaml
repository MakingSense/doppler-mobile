<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Doppler.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="NormalFont">
                <On Platform="Android" Value="ProximaNova-Regular.ttf#Proxima Nova"/>
                <On Platform="iOS" Value="ProximaNova-Regular"/>
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:String" x:Key="BoltFont">
                <On Platform="Android" Value="ProximaNova-Bold.ttf#Proxima Nova"/>
                <On Platform="iOS" Value="ProximaNova-Bold"/>
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>